@model Hobby;

<form action="/create/hobby" class="card col-4 mx-auto p-4" method="post">
<h2 class="text-center">Create a Hobby</h2>
<div class="form-group">
    <label asp-for="Activity"></label>
    <input asp-for="Activity" class="form-control">
    <span asp-validation-for="Activity" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control">
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<input type="submit" value="Create Hobby" class="btn btn-primary">
</form>